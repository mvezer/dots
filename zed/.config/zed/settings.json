{
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "ui_font_size": 15,
  "buffer_line_height": { "custom": 1.7 },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "hide_mouse": "on_typing_and_movement",
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "line_height": { "custom": 1.4 },
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 13
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 13.0,
  "file_types": {
    "Dockerfile": ["Dockerfile.*"],
    "Helm": ["**/ci/**/*.yaml", "**/argo/**/*.yaml", "**/templates/*.yaml"],
    "YAML": ["*.yaml", "*.yml"]
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": true,
    "git_status": true
  },
  "languages": {
    "JavaScript": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": [
            "--syntax=Lua51",
            "--respect-ignores",
            "--stdin-filepath",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "TypeScript": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "Helm": {
      "formatter": "language_server",
      "format_on_save": "on",
      "language_servers": ["helm-language-server"]
    },
    "YAML": {
      "language_servers": ["yaml-language-server", "!docker-compose"],
      "formatter": "language_server",
      "tab_size": 2,
      "format_on_save": "off",
      "show_whitespaces": "all"
    }
  },
  // "edit_predictions": {
  //   "mode": "subtle"
  // },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "experimental.theme_overrides": {
    "players": [{ "cursor": "#ebc634" }]
  }
}
